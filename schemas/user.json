{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "username": {
        "type": "string",
        "minLength": 4,
        "maxLength": 50
      },
      "password": {
        "type": "string",
        "format": "password",
        "minLength": 8,
        "maxLength": 128
      }
    },
    "required": ["username", "password"],
    "additionalProperties": false
  }